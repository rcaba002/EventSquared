@using Microsoft.AspNet.Identity
@using EventSquared.Models

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @{
                var manager = new UserManager<ApplicationUser>(new Microsoft.AspNet.Identity.EntityFramework.UserStore<ApplicationUser>(new ApplicationDbContext()));
                var user = manager.FindById(User.Identity.GetUserId());

                if (user.FirstName != null)
                {
                    @Html.ActionLink("Hello " + user.FirstName + "!", "Settings", "Manage", routeValues: null, htmlAttributes: new { title = "Settings", @class = "hello-visibility" })
                }
                else
                {
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Settings", "Manage", routeValues: null, htmlAttributes: new { title = "Settings", @class = "hello-visibility" })
                }
             } 
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log out</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Sign up", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
