@model EventSquared.Models.allViewModel
@using Microsoft.AspNet.Identity
@using EventSquared.Models

@{
    ViewBag.Title = "Your Squares";
}

<div class="col-md-8 nopad">
    <div style="display:inline-block">
        <h2>Your Squares</h2>

        @foreach (var item in Model.yourSquares)
        {
            <div class="squareBox1">
                <div class="squareBox_youretitle">Square: @Html.DisplayFor(modelItem => item.Title)</div>
                <div class="squareBox_yourtitle">For @Html.DisplayFor(modelItem => item.Event.Title)</div>
                <div class="squareBox_dtitle">@Html.DisplayNameFor(model => item.Description)</div>
                <div class="squareBox_description">@Html.DisplayFor(modelItem => item.Description)</div>
                <div>@Html.ActionLink("Details", "Details", "Squares", new { id = item.Id }, new { @class = "btn-primary btn-new eventBox_btn" })</div>
            </div>
        }
    </div>
</div>

<div class="col-md-4 nopad">
    <h2>Square Feed</h2>
    <div class="scrollfeedallView">
        @foreach (var item in Model.allSquares)
        {
            <div class="squareBox">
                <div class="squareBox_ctime">Updated: @Html.DisplayFor(modelItem => item.CurrentTime)</div>
                <div class="squareBox_etitle">@Html.DisplayFor(modelItem => item.Title)</div>
                <div class="squareBox_title">Event - @Html.DisplayFor(modelItem => item.Event.Title)</div>
                <div class="squareBox_title">Begins: @Html.DisplayFor(modelItem => item.StartTime) Ends: @Html.DisplayFor(modelItem => item.EndTime)</div>
                <div class="squareBox_title">Location: @Html.DisplayFor(modelItem => item.Location)</div>
                <div class="squareBox_dtitle">@Html.DisplayNameFor(model => item.Description)</div>
                <div class="squareBox_description">@Html.DisplayFor(modelItem => item.Description)</div>
            </div>
        }
    </div>
</div>